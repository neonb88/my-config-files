[alias]
  ad  = add
  #############
  b   = branch
  #############
  c   = commit
  cm  = commit -vm
  ca  = commit -vam
  #############
  cl  = clone
  #############
  d   = diff
  #############
  f   = fetch
  #############
  l   = log
  lo  = log --oneline --graph --decorate
  logOneFileAllBranches = log --all --follow -p --  #filename at end
  l1  = logOneFileAllBranches
  lod = lo --pretty=format:'%C(auto)%h%d (%as) %cn <%ce> %s'     # show date (hence the **__"d"__** in "lod" )    and other useful info                            and author:    https://stackoverflow.com/questions/1441010/the-shortest-possible-output-from-git-log-containing-author-and-date
  #############
  mt  = mergetool
  ############# ^   mergetool is good for resolving merge conflicts; it pulls up a beyondCompare UI
  o   = checkout
  #############
  p   = pop
  pl  = pull
  ps  = push
  psCO= push --set-upstream origin       #      new-branchname       decid-32425  # add remote when pushing from CapitalOne (CO)    
  #############
  r   = rebase
  res = reset --hard origin/master
      # moves to the main head (throws away local commits)
  #############
  s   = stash
  st  = status
  #############
  u   = config --get remote.origin.url
  ur  = config --get remote.origin.url
  url = config --get remote.origin.url



